<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".views.profile.ProfilePageFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="119dp"
        android:layout_marginTop="412dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="196dp"
            android:layout_height="119dp"
            android:background="@drawable/section_outline"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginStart="82dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@mipmap/location" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="92dp"
                android:text="1" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="45dp"
                android:layout_marginBottom="340dp"
                android:text="Trips Completed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:background="@drawable/section_outline"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="29dp"
                android:layout_height="26dp"
                android:layout_marginStart="92dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@mipmap/packpals" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="102dp"
                android:layout_marginEnd="92dp"
                android:text="5" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="76dp"
                android:layout_marginBottom="340dp"
                android:text="Pack Pals" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="16dp"
        android:background="@drawable/rounded_corner"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="98dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/picture_rounded_corner"
                android:src="@mipmap/user_profile"
                android:elevation="8dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameView"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Name"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/button_edit"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="140dp"
                        android:background="#00FFFFFF"
                        android:src="@mipmap/edit_profile" />
                </LinearLayout>

                <TextView
                    android:id="@+id/joinedView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Joined Date" />

                <TextView
                    android:id="@+id/genderAgeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender, Age" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/idView3"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="Pal ID: " />

                    <TextView
                        android:id="@+id/idView"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="ABCDEF" />
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="#00FFFFFF"
                        android:src="@mipmap/copy_image" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/idView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textSize="20sp"
            android:paddingLeft="22dp"/>

        <TextView
            android:id="@+id/bioView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:paddingLeft="22dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>